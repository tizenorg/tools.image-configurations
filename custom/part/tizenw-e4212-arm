# ROOT fs partition
part / --size=2000 --ondisk mmcblk0p --fstype=ext4 --label=rootfs --extoptions="-J size=16"
# INITRD partition
part /initrd --size=8 --ondisk mmcblk0p --fstype=ext4 --label=ramdisk-recovery --extoptions="-m 0 -J size=1 -b 1024"
# DATA partition
part /opt/ --size=512 --ondisk mmcblk0p --fstype=ext4 --label=system-data --extoptions="-m 0"
# UMS partition
part /opt/usr/ --size=3000 --ondisk mmcblk0p --fstype=ext4 --label=user --extoptions="-m 0"
